    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug hivm",
            "cargo": {
                "args": [
                    "build",
                    "--bin=hivm",
                    "--package=hivm"
                ],
                "filter": {
                    "name": "hivm",
                    "kind": "bin"
                }
            },
            "args": [
                "${workspaceFolder}/assembler/impl/test.hibc"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'assembler'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=assembler",
                    "--package=assembler"
                ],
                "filter": {
                    "name": "assembler",
                    "kind": "bin"
                }
            },
            "args": [
                "${workspaceFolder}/assembler/impl/test.asm"
            ],
            "cwd": "${workspaceFolder}"
        },
    ]
}